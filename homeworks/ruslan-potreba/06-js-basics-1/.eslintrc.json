{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "prettier"],

    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "never"],
        "linebreak-style": ["error", "windows"],
        "no-unused-vars": "warn",
        "no-plusplus": "warn"
    }
}
